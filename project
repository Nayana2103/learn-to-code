#include <stdio.h>
int main()
{
    int d1,m1,y1,d2,m2,y2,r1,r2,r3;
    printf("****************************************\n");
    printf("            AGE CALCULATOR           \n");
    printf("*****************************************\n");

   
    printf("enter your birthday day:");
    scanf(" %d", &d1);
    printf("enter your birthday month:");
    scanf(" %d", &m1);
    printf("enter your birthday year:");
    scanf(" %d", &y1);
    printf("enter current day:");
    scanf(" %d", &d2);
    printf("enter current month:");
    scanf(" %d", &m2);
    printf("enter current year:");
    scanf(" %d", &y2);



    if((d1>31||d1<1)||(d2>31||d2<1)||(m1<0||m1>12)||(m2<0||m2>12)||(y1<0&&y2<0))
    {
        printf("You entered someting wrong:");
    }
    else
    {
        /*r3=to store difference between years*/
         /*r2=to store difference between months*/
          /*r1=to store difference between dates*/
        r3=y2-y1;

        if(d2>d1)
        {
            r1=d2-d1;
        }
        else
        {
            m2=m2-1;
            d2=d2+30;
            r1=d2-d1;
        }

        if(m2>m1)
        {
            r2=m2-m1;
        }
        else
        {
            r3=r3-1;
            m2=m2+12;
            r2=m2-m1;
         }
    }

    
    printf("Your current age is %d years %d months and %d days\n",r3,r2,r1);

return 0;
}#include <stdio.h>
